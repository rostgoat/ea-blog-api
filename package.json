{
  "name": "ea-blog-api",
  "version": "0.0.1",
  "description": "Game Bible API",
  "author": "Rost Myshkin",
  "license": "MIT",
  "engines": {
    "node": "13.10.x"
  },
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:heroku": "node dist/main.js",
    "start:debug": "nest start --debug --watch",
    "prestart:prod": "yarn tsc",
    "build": "rimraf dist && npm run rebuild && tsc -p tsconfig.build.json",
    "rebuild": "nest build",
    "deploy": "git push heroku master",
    "postinstall": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "docker:build-image": "docker build -t ea-blog:latest .",
    "docker:start": "docker run -it ea-blog",
    "docker:start-expose": "docker run -it -d -p 3000:3000 ea-blog",
    "drop-db:local": "psql -U rm -d postgres -p 5432 -f sql/drop_create_db.sql",
    "drop-db:test": "psql -U rm -d postgres -p 5432 -f sql/drop_create_db_test.sql",
    "db:diagram": "typeorm-uml ormconfig.js",
    "ci:test": "NODE_ENV=test jest --ci --runInBand --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@nestjs/cli": "^6.13.2",
    "@nestjs/common": "^6.10.14",
    "@nestjs/config": "^0.2.4",
    "@nestjs/core": "^6.10.14",
    "@nestjs/jwt": "^6.1.2",
    "@nestjs/passport": "^6.2.0",
    "@nestjs/platform-express": "^6.10.14",
    "@nestjs/platform-socket.io": "^6.11.8",
    "@nestjs/schematics": "^6.8.1",
    "@nestjs/serve-static": "^2.1.0",
    "@nestjs/swagger": "^4.2.4",
    "@nestjs/testing": "^6.10.14",
    "@nestjs/typeorm": "^6.2.0",
    "@nestjs/websockets": "^6.11.8",
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^24.0.25",
    "@types/mkdirp": "^1.0.0",
    "@types/multer-s3": "^2.7.7",
    "@types/node": "^13.7.0",
    "@types/passport": "^1.0.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/sharp": "^0.24.0",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "aws-sdk": "^2.648.0",
    "bcrypt": "^4.0.1",
    "bluebird": "^3.7.2",
    "class-validator": "^0.11.0",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "fs": "0.0.1-security",
    "mkdirp": "^1.0.3",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "nestjs-config": "^1.4.5",
    "nestjs-easyconfig": "^1.8.10",
    "nestjs-multer-extended": "^1.1.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "pg": "^7.18.1",
    "pg-connection-string": "^2.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "sharp": "^0.25.1",
    "swagger-ui-express": "^4.1.3",
    "typeorm": "^0.2.22",
    "typeorm-uml": "^1.1.2",
    "typescript": "^3.7.4",
    "uuid4": "^1.1.4"
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "lint-staged": "^10.1.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.0",
    "tsconfig-paths": "^3.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ]
  }
}
